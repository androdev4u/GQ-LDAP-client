	* src/dt_date.h,
	* src/dt_entry.c,
	* src/dt_entry.h,
	* src/dt_generic_binary.c,
	* src/dt_generic_binary.h,
	* src/dt_int.c,
	* src/dt_int.h,
	* src/dt_jpeg.c,
	* src/dt_jpeg.h,
	* src/dt_numstr.c,
	* src/dt_numstr.h,
	* src/dt_oc.c,
	* src/dt_oc.h,
	* src/dt_password.c,
	* src/dt_password.h,
	* src/dt_text.c,
	* src/dt_text.h,
	* src/dt_time.c,
	* src/dt_time.h,
	* src/formfill.h,
	* src/gq-type-display.h,
	* src/input.c,
	* src/syntax.c,
	* src/syntax.h: implemented the display type handling with GObject
	(contains a reference leak in init_syntaxes())

